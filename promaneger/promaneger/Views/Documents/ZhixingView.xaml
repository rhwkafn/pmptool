                    LineHeight="20">
                            <Paragraph>
                              
                                    <Bold></Bold>
                                    <Run FontSize="16" FontWeight="Bold">项目沟通管理</Run>
                                    <LineBreak />
                                    <Run FontSize="16" FontWeight="Bold">流程1：管理沟通</Run>
                                <LineBreak />
                                <Figure HorizontalAnchor="ColumnLeft" VerticalAnchor="ContentCenter">
                                    <BlockUIContainer>
                                        <Image
Width="600"
Height="300"
Source="/Images/Document/沟通/管理沟通.png" />
                                    </BlockUIContainer>
